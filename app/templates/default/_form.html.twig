{% extends 'base.html.twig' %}

{% block title %}
    {% if page_title_param is defined %}{{ page_title|trans(page_title_param) }}{% else %}{{ page_title|trans }}{% endif %}
{% endblock %}

{% block body %}
        <div class="container-fluid mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h2>
                                {% if page_title_param is defined %}{{ page_title|trans(page_title_param) }}{% else %}{{ page_title|trans }}{% endif %}
                            </h2>
                        </div>
                        <div class="card-body">
                            {{ form_start(form, { method: attr.method|default('POST'), action: attr.action }) }}
                            {% if false == form.vars.valid %}
                                {% include 'default/_flash_messages.html.twig' with {
                                    type: 'danger',
                                    message: 'message.form_error'|trans,
                                }%}
                            {% endif %}
                            {{ form_widget(form) }}
                            <div class="form-group row float-sm-right cols-sm-10">
                                <input type="submit" value="{{ submit_label|default('action.save'|trans) }}" class="btn btn-primary btn-lg btn-block mr-3 ml-3 mt-2" />
                            </div>
                            {% if back_to_list_path|default(false) %}
                                <div class="form-group row float-sm-left">
                                    <a href="{{ url(back_to_list_path) }}" class="btn btn-link">
                                        {{ 'action.back_to_list'|trans }}
                                    </a>
                                </div>
                            {% endif %}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

{% endblock %}