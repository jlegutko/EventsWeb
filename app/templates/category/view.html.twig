{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_list'|trans({'%id%': category.id}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.category_list'|trans({'%id%': category.id}) }}</h1>
    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.category_id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label.category_name'|trans }}</dt>
            <dd>{{  category.name }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}