{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.photo_view' }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h3 class="list-h mt-5"><i class="material-icons mr-3">photo</i>{{ 'title.photo_view'|trans }}</h3>
        {% if photo is defined and photo|length %}
            <div>
                <img class="list-h mt-5" src="{{ asset('uploads/photos/'~ photo.file.filename) }}">
            </div>
        {% else %}
            {% include 'default/_single_flash_message.html.twig' with {
                type: 'warning',
                message: 'message.item_not_found'|trans
            } %}
        {% endif %}
    </div>
{% endblock %}