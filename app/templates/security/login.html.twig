{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.login'|trans }}
{% endblock %}
{% block body %}
    <div class="container-fluid mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4 mb-5">
                <div class="card">
                    <div class="card-header">
                        <h2>
                            {{ 'title.login'|trans }}
                        </h2>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ url('security_login') }}">
                            {% if error %}
                                {%  include 'default/_flash_messages.html.twig' with {
                                    type: 'danger',
                                    message: error.messageKey|trans(error.messageData, 'security')
                                } %}
                            {% endif %}
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 required" for="email">{{ 'label.email'|trans }}</label>
                                <div class="col-sm-10">
                                    <input type="email" id="email" name="email" value="{{ last_username }}" class="form-control" required="required" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2 required" for="password">{{ 'label.password'|trans }}</label>
                                <div class="col-sm-10">
                                    <input type="password" id="password" name="password" class="form-control" required="required" />
                                </div>
                            </div>

                            <div class="form-group row float-sm-right">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <input type="submit" value="{{ 'action.login'|trans }}" class="btn btn-primary mr-3 ml-3 mt-3" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}