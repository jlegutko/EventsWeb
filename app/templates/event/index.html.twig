{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_list'|trans }}
{% endblock %}

{% block body %}

    {% if pagination is defined and pagination|length %}

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>


    <div class="container-fluid">
        <h3 class="list-h mt-5">{{  'title.event_list'|trans }}</h3>
        <div class="d-flex justify-content-center mt-5">
            {% if pagination is defined and pagination|length %}
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'label.event_id'|trans, 'u.id') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'label.event_name'|trans, 'u.name') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'label.event_date'|trans, 'u.date') }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in pagination %}
                        <tr>
                            <th scope="row">{{ event.id }}</th>
                            <td>{{ event.name}}, {{ event.place }}, {{ event.eventDate|date("d/m/y") }}</td>
                            <td><a href="{{ url('event_view', {id: event.id}) }}">{{ 'label.go_to_event'|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>



    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}