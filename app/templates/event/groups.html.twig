{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.my_groups'|trans }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h3 class="list-h mt-5"><i class="material-icons br-lg-1 mb-4 ">group</i> {{  'label.my_groups'|trans }}</h3>
        <div class="d-flex justify-content-center mt-5">
            {% if event.groups is defined and event.groups|length %}
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for group in event.groups %}
                        <tr>
                            <th scope="row">{{ group.id }}</th>
                            <td>{{ group.name }}</td>
                            <td><a href="{{ url('group_view', {id: group.id}) }}">{{ 'label.go_to_group'|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}