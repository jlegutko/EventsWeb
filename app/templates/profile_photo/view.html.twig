{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.profile_photo_view' }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.profile_photo_view' }}</h1>
    {% if profile_photo is defined and profile_photo|length %}
        <div>
            <img src="{{ asset('uploads/photos/'~ profile_photo.file.filename) }}">
        </div>
    {% else %}
        {% include 'default/_single_flash_message.html.twig' with {
            type: 'warning',
            message: 'message.item_not_found'|trans
        } %}
    {% endif %}
{% endblock %}