{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.group_list'|trans }}
{% endblock %}

{% block body %}
<div class="container mb-3">
    <div class="tile">
        <div class="wrapper">
            <h3 class="ml-5 mt-4"><i class="material-icons mr-2">supervisor_account</i>{{ 'label.supervisor'|trans }}</h3>
            <div class="ml-5 mt-3 mb-4 panel-admin">
                <ul class= "navbar-nav">
                    <li class="nav-item mr-lg-4 mt-2{% if app.request.attributes.get('_route') == 'user_index' %} active {% endif %}">
                        <a class="nav-link ml-4" href = "{{ url('user_index') }}" title = "{{ 'label.user_index'|trans }}" >
                            <i class="material-icons mr-3">person</i>{{ 'label.user_index'|trans }}
                        </a>
                    </li>
                    <li class="nav-item mr-lg-4{% if app.request.attributes.get('_route') == 'category_index' %} active {% endif %}">
                        <a class="nav-link ml-4" href = "{{ url('category_index') }}" title = "{{ 'label.category_index'|trans }}" >
                            <i class="material-icons mr-3">category</i>{{ 'label.category_index'|trans }}
                        </a>
                    </li>
                    <li class="nav-item mr-lg-4 {% if app.request.attributes.get('_route') == 'event_index' %} active {% endif %}">
                        <a class="nav-link ml-4" href = "{{ url('event_index') }}" title = "{{ 'label.events_page'|trans }}">
                            <i class="material-icons mr-3">event</i>{{ 'label.event_index'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

{% endblock %}