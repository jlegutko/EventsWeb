{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.my_events'|trans }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h3 class="list-h mt-5"><i class="material-icons br-lg-1 mb-4 ">event</i> {{  'label.my_events'|trans }}</h3>
        <div class="d-flex justify-content-center mt-5">
            {% if user.events is defined and user.events|length %}
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in user.events %}
                        <tr>
                            <th scope="row">{{ event.id }}</th>
                            <td>{{ event.name}}, {{ event.place }}, {{ event.eventDate|date("d/m/y") }}</td>
                            <td><a href="{{ url('event_view', {id: event.id}) }}">{{ 'label.go_to_event'|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}