{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.my_groups'|trans }}
{% endblock %}

{% block body %}

    <div class="container-fluid">
        <h3 class="list-h mt-5"><i class="material-icons br-lg-1 mb-4 ">group</i> {{  'label.my_groups'|trans }}</h3>
        <div class="d-flex justify-content-center mt-5">
            {% if pagination is defined and pagination|length %}
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">{{ 'label.table_id'|trans }}</th>
                        <th scope="col">{{ 'label.group_name'|trans}}</th>
                        <th scope="col">{{ 'label.item_action'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for member in pagination %}
                        <tr>
                            <th scope="row">{{ member.id }}</th>
                            <td>{{ member.community.name }}</td>
                            <td><a href="{{ url('group_view', {id: member.community.id}) }}">{{ 'label.go_to_group'|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}