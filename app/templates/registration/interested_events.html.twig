{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.interested_events'|trans }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h3 class="list-h mt-5"><i class="material-icons br-lg-1 mb-4">star</i> {{  'label.interested_user_events'|trans }}</h3>
        <div class="d-flex justify-content-center mt-5">
            {% if user.interests is defined and user.interests|length %}
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for interest in user.interests %}
                        <tr>
                            <th scope="row">{{ interest.id }}</th>
                            <td>{{ interest.event.name}}, {{ interest.event.place }}, {{ interest.event.eventDate|date("d/m/y") }}</td>
                            <td><a href="{{ url('event_view', {id: interest.event.id}) }}">{{ 'label.go_to_event'|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}