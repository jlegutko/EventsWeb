{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.interested_user_events'|trans }}
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h3 class="list-h mt-5"><i class="material-icons br-lg-1 mb-4">group</i> {{  'label.user_interested'|trans }}</h3>
        <div class="d-flex justify-content-center mt-3">
            {% if user.members is defined and user.members|length %}
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for member in user.members %}
                        <tr>
                            <th scope="row">{{ member.community.id }}</th>
                            <td>{{ member.community.name }}</td>
                            <td><a href="{{ url('group_view', {id: member.community.id}) }}">{{ 'label.go_to_group'|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
{% endblock %}